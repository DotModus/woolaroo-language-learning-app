  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.20",
    "@google-cloud/vision": "^1.5.0",
    "fluent-ffmpeg": "^2.1.2",
    "googleapis": "^45.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-promise": "^4.0.1"
  },
  "private": true
}
